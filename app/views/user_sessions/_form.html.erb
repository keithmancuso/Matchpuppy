<h1>Login</h1>

<%= form_for(@user_session) do |f| %>

  
  <div class="clearfix">
    <%= f.label :email %>
	<div class="input">
    	<%= f.text_field :email %>
	</div>
  </div>
  
  <div class="clearfix">
      <%= f.label :password %><br />
      
  	<div class="input">
    	  <%= f.password_field :password %>
    	</div>
    </div>
  <div class="clearfix">
	  <%= f.label :remember_me %>
	  <div class="input">
 		 <%= f.check_box :remember_me %>
  	  </div>
  </div>
  <%= f.submit "Login" %>
<% end %>