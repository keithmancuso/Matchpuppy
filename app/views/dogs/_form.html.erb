<div class="control-group">
	<%= f.label :Photo %>
	<div class="controls">
	<%= f.file_field :avatar %>
	</div>
</div>
<div class="control-group">
	<%= f.label "What do you love most about your dog?" %>
	<div class="controls">
		<%= f.text_area :favorite, :style=>"height:50px" %>
