<%= form_for([@user, @dog], :html => { :class=>"form-horizontal"}) do |f| %>
<div class="well">
<div class="control-group">
	<%= f.label "Your dog's name" %>
	<div class="controls">

	<%= f.text_field(:name) %>
	</div>
</div>
<div class="control-group">
	<label>How big?</label>
	<div class="controls">
		<div class="row" style="height:260px;" >
			<div class="span2" style >
				<label for="smalldog">
					<img src="/images/small.png" style="margin-top:120px;"><br/>
					<%= f.radio_button( :size, "small", :id => "smalldog") %> Small (0-20lbs)
				</label>

			</div>
			<div class="span3" >
				<label for="mediumdog">
					<img src="/images/medium.png" style="margin-top:70px;"><br/>
					<%= f.radio_button( :size, "medium", :id => "mediumdog") %> Medium (21-50lbs)
				</label>

			</div>
			<div class="span3" >
				<label for="largedog">
					<img src="/images/large.png"><br/>
					<%= f.radio_button( :size, "large", :id=>"largedog") %> Large (51lbs+)
				</label>

			</div>	
		</div>
	</div>
</div>

<div class="control-group">
	<%= f.label "What breed?" %>
	<div class="controls">
		<%= f.select(:breed, options_for_select([['Beagle'], ['Boxer'], ['Boxer'], ['Bulldog'], ['Chihuahua'], ['German Shepherd'], ['Golden Retriever']])) %>
	</div>
</div>

<div class="control-group">
	<%= f.label :gender %>
	<div class="controls">
		<div class = "row">
			<div class = "span2">
				<label for = "male">
					<%= image_tag 'male-paw.png' %> 
					<%= f.radio_button( :gender, "Male", :id => "male") %>
					Male
				</label>
			</div>
			<div class = "span2">
				<label for = "female">
					<%= image_tag 'female-paw.png' %> 
					<%= f.radio_button( :gender, "Female", :id => "female") %>
					Female
				</label>
			</div>
		</div>
	</div>
</div>


<div class="control-group">
<%= f.label :energy, "Energy Level?"%>
	<div class="controls">
		<div class = "row">
			<div class = "span2">
				<label for = "Low">
					<%= f.radio_button( :energy, "Low", :id => "Low") %>
					Low
				</label>
			</div>
			<div class = "span2">
				<label for = "Medium">
					<%= f.radio_button( :energy, "Medium", :id => "Medium") %>
					Medium
				</label>
			</div>
			<div class = "span2">
				<label for = "High">
					<%= f.radio_button( :energy, "High", :id => "High") %>
					High
				</label>
			</div>
		</div>
	</div>
</div>


