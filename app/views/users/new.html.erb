<% if notice %>
<div class="alert">
<%= notice %>
</div>
<% end %>


<div class="page-header">
<h1>It's a Dog Meet Dog World!</h1>
</div>

<div class="row">

<div class="span8">
	
	
	<h2>Dogs looking for playdates</h2>
	
	<ul class="thumbnails">
	<% @dogs.each do |dog| %>

	  
	<li class="thumbnail">
	  <%= link_to ((image_tag dog.avatar.url(:thumb)), user_dog_path(dog.user, dog) ) %>
	</li>


<% end %>
</ul>

</div>
<div class="span4">
<h2>Sign-up</h2>


<%= render 'form' %>
</div>
</div>

