<% if notice %>
<div class="alert alert-success">
<%= notice %>
</div>
<% end %>

<div class="page-header">
<h1>
  <%= @user.name %>
</h1>
</div>
<div class="row">



<div class="span4 ">
	<div class="well">
<h3>Dogs</h3>
<ul class="thumbnails">
<%= render @user.dogs %>
</ul>
</div>


</div>
<div class="span3">
	<div class="well">
<h3>Parks Loved</h3>

<%= render @user.park_loves %>

<% if @user.park_loves.count  == 0 %>
<div class="help-block">
	<A href="<%= parks_path %>">Find some dog parks</a> you love 
	</div>
<% end %>
</div>
</div>

<div class="span3">
	<div class="well">
<h3>Upcoming Playdates</h3>

<%= render @user.playdates %>

<% if @user.playdates.count  == 0 %>
<div class="help-block">
	<A href="<%= parks_path %>">Find some dog parks</a> you love to schedule playdates there
	</div>
<% end %>
</div>
</div>
</div>



