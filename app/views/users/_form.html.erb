

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
	<div class="input">
   	 <%= f.text_field :name %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :email %>
	<div class="input">
    	<%= f.text_field :email %>
	</div>
  </div>
  <%= fields_for :dog do |d| %>
  <div class="clearfix">
    <%= d.label("Your dog's name:") %>
    
	<div class="input">
    	<%= d.text_field :name %>
	</div>
  </div>
  <% end %> 
  
  <div class="clearfix">
    <%= f.label("Your Favorite Dog Park:") %>
    
	<div class="input">
  
  <%= f.select(:park_id, @parks.map {|u| [u.name,u.id]}) %>
  </div>
  </div>
  <div class="clearfix">
      <%= f.label :password %><br />
      
  	<div class="input">
    	  <%= f.password_field :password %>
    	</div>
    </div>
    
    <div class="clearfix">
     <%= f.label :password_confirmation %><br />
      
  	<div class="input">
    	  <%= f.password_field :password_confirmation %>
    	</div>
    </div>
  
  
  
  
  <div class="actions">
    <%= f.submit("Sign-up", :class=>'btn primary') %>
    <%= link_to "Already have an account? Login", :login %>

  </div>
<% end %>