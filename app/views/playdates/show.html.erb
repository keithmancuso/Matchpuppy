<% if notice %>
<div class="alert-message info">
<p id="notice"><%= notice %></p>
</div>
<% end %>

<p>
  <b>Play date:</b>
  <%= l @playdate.play_date, :format => :short %>
</p>

<p>
  <b>Park:</b>
  <%= @playdate.park.name %>
</p>

<p>
  <b>Organizer:</b>
  <%= @playdate.user.name %>
</p>

<p>
  <b>Status:</b>
  <%= @playdate.status %>
</p>


