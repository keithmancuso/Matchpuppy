 </div>
  
<% end %>
<% if !@playdate.status %>
<hr/>
<h2>Other Dogs who love this park</h2>
<% @guests.each do |guest| %>
 <div class="thumb">
	<%= image_tag guest.dog.avatar.url(:medium) %>
	<h4><%= guest.dog.name %></h4>
	
	<%= form_for([@playdate, guest]) do |f| %>

	 	<%= f.hidden_field :dog_id  %>

	    <%= f.submit "Invite this dog", :class=>"btn" %>

	<% end %>
 </div>
  
<% end %>



