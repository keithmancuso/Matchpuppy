<% if notice %>
<div class="alert info">
<%= notice %>
</div>
<% end %>

<div class="page-header">
	<div class="row">
		<div class="span8">
			<h1>
				<% if @playdate.user == current_user %>Your <% end %>playdate for <%= l @playdate.play_date, :format => :playdate %>
			</h1>
		</div>
		<Div class="span4">
			<div class="fb-like" data-send="true" data-width="100" data-show-faces="false"></div>
		</div>
	</div>
</div>

<div class="row">

	<div class="span3">
		<h3>Instigator</h3>

		<%= image_tag @playdate.user.dogs.first.avatar.url(:medium) %>
		<h4><%= link_to @playdate.user.dogs.first.name, user_dog_path(@playdate.user, @playdate.user.dogs.last) %> </h4>
		<ul class="unstyled">
			<li>Breed: <%= @playdate.user.dogs.first.breed %> </li>
			<li>Gender: <%= @playdate.user.dogs.first.gender%> </li>
			<li>Owner: <%= link_to @playdate.user.name, @playdate.user %> </li>

		</ul>
		<% if @playdate.user == current_user %>
		<%= link_to "Edit Playdate", edit_playdate_path(@playdate)%>
		
		<% end %>
	</ul>
</div>


	
		<div class="span6">
	
	<% if !@playdate.status && @playdate.user == current_user %>
		
		
		<h3>Invite dogs who love this park</h3>


		<% if @guests.count > 0 %>
		<ul class="thumbnails">
			<% @guests.each do |playdate_guest| %>
				<li id="invitee<%= playdate_guest.dog.id %>" class="thumbnail">
					<%= image_tag playdate_guest.dog.avatar.url(:medium) %>
					

					<%= form_for([@playdate,playdate_guest], :remote => true) do |f| %>

						<%= f.hidden_field :dog_id  %>
						<%= f.submit "Invite "+playdate_guest.dog.name, :class=>"btn" %>

					<% end %>
				</li>
			<% end %>
			</ul>
			
			
		<% else %>
			<div class="help-block">No other dogs love this park right now.  Help spread the word about matchpuppy, share it on facebook and twitter</div>
		<% end %>
		
		<div class="form-actions">
			
			<%= form_for(@playdate) do |f| %>
				<%= f.hidden_field :status  %>
			<%= f.submit "Finalize Playdate and Invite Guests", :class=>"btn btn-primary" %>
				
			<% end %>
		
		</div>
	<% else %>


		<ul class="unstyled">
			<li>
				<b>Starts at:</b> <%= l @playdate.play_date, :format => :playtime %>	
			</li>
		</ul>

		<h3>Share</h3>

		<div class="fb-like" data-layout="button_count" data-send="true" data-width="100" data-show-faces="false"></div>
		<br/>
		<a href="https://twitter.com/share" class="twitter-share-button" data-via="matchpuppy" data-size="small">Tweet</a>

		<%= render @playdate.park %>
		<p>
			<%= @playdate.description %>
		</p>
		<hr/>
		

		<h4>Comments</h4>

		<%= render @comments %>

		<%= form_for(@new_comment) do |f| %>
			<%= f.label "New Comment" %>
			<%= f.text_area :body  %>
			<div class="clearfix">
				<%= f.hidden_field :playdate_id%>
			</div>
			<div class="actions">
				<%= f.submit "Comment", :class=>"btn primary" %>
			</div>
		<% end %>
			<% end %>
	</div>
	<div class="span3">

	<!-- User Actions -->

	<% if @playdate.user != current_user && @active_guests.length > 0  %>
		<h3>Your RSVP?</h3>

		<div class="btn-group">
			<a class="btn info <% if @active_guests.first.rsvp =="Yes" %>active<% end %>" href="/playdates/<%= @playdate.id %>/rsvp/Yes">Yes</a>
			<a class="btn info <% if @active_guests.first.rsvp =="Maybe" %>active<% end %>" href="/playdates/<%= @playdate.id %>/rsvp/Maybe">Maybe</a>
			<a class="btn info <% if @active_guests.first.rsvp =="No" %>active<% end %>" href="/playdates/<%= @playdate.id %>/rsvp/No">No</a>
		</div>
		<br/>
	<% elsif @playdate.user != current_user %>
		<a href="/playdates/<%= @playdate.id %>/join" class="btn primary large">Join this playdate</a>
		<br/>
	<% end %>
	
	
	<% if @playdate.status %>

	<h3>RSVPs</h3>
	<ul class="unstyled">
		<li>
			<b><i class="icon ok"></i> Yes:</b>
			<%= @playdate.playdate_guests.yes.count %>	
		</li>
		<li>
			<b>Maybe:</b>
			<%= @playdate.playdate_guests.maybe.count %>	
		</li>

		<li>
			<b><i class="icon remove"></i> No:</b>
			<%= @playdate.playdate_guests.no.count %>	
		</li>
	</ul>
	
	<% end %>





	<h3>Invited Dogs</h3>
	<ul id="invited" class="thumbnails">
		<%= render @playdate.playdate_guests %>
	</ul>


</div>

</div>
