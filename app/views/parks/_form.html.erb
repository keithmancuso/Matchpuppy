	<div class="control-group">
   		<%= f.label :address %>
		<div class="controls">
    		<%= f.text_field :address %>
		</div>
 	</div>

	<div class="control-group">
	    <%= f.label :description %><br />
		<div class="controls">
	    	<%= f.text_area :description, :style=>"height:50px" %>
